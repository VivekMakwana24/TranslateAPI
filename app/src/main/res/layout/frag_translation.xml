<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/translator_gradient">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:padding="10dp"
                android:text="WikiSnaps Translator"
                android:textColor="#000"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibMic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/ripple"
                            android:padding="10dp"
                            android:src="@mipmap/microphone"
                            android:tint="#fff"
                            android:tooltipText="Mic"
                            android:visibility="visible" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Enter Text To Translate "
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtTranslateText"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="#D5FDFB"
                        android:drawableEnd="@mipmap/delete"
                        android:hint="Enter Here"
                        android:padding="10dp"
                        android:text="Hello" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibSpeak"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_gravity="right"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/ripple"
                            android:padding="20dp"
                            android:src="@mipmap/speak"
                            android:tint="#fff"
                            android:tooltipText="Speak" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/choose_language"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spTranslate"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:padding="10dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtTranslatedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:padding="10dp"
                        android:text="Translated Text"
                        android:textColor="#000"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>